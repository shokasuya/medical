.side-bar
  .side-bar__user-name
    .side-bar__user-name__box
      .side-bar__user-name__box__test-user
        = current_user.name
      .icon
        .icon_a
          = link_to new_group_path do
            = icon('fa', 'edit')
        .icon_b
        = link_to edit_user_path(current_user) do
          = icon('fa', 'cog')
  .side-bar__group-list
    - current_user.groups.each do |group|
    .side-bar__group-list__box
        = link_to group_messages_path(group) do
      .side-bar__group-list__box__name
        = group.name
      .side-bar__group-list__box__message
        = group.show_last_message
